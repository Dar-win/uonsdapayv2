{
  "compilerOptions": {
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "declaration": true,
      "sourceMap": true,
      "module": "commonjs",
      "experimentalDecorators": true, //for type-graphql
      "emitDecoratorMetadata": true, //for type-graphql
      "outDir": "dist/",
      "target": "es2018",
      "lib": [
          "es2018",
          "es6",
          "dom",
          "esnext.asynciterable"
      ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.test.ts"
  ]
}
